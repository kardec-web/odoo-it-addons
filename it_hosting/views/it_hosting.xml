<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="it_hosting_tree" model="ir.ui.view">
        <field name="name">it.hosting.tree</field>
        <field name="model">it.hosting</field>
        <field name="arch" type="xml">
            <field name="name"/>
            <field name="date_expiration"/>
            <field name="domain_id"/>
            <field name="hosting_type"/>
        </field>
    </record>

    <record id="it_hosting_form" model="ir.ui.view">
        <field name="name">it.hosting.form</field>
        <field name="model">it.hosting</field>
        <field name="arch" type="xml">
        <form string="Hosting">
            <sheet>
                <div class="oe_button_box" name="button_box">
                    <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                        <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                    </button>
                </div>
                <div class="oe_title">
                    <h1>
                        <field name="name" default_focus="1" />
                    </h1>
                </div>
                <group>
                    <field name="date_creation"/>
                    <field name="date_expiration"/>
                </group>

                <group>
                    <field name="domain_id"/>
                    <field name="hosting_type"/>
                    <field name="resource_type"/>
                    <field name="os"/>
                </group>

                <notebook>
                    <page name="note" string="Note">
                        <group>
                            <field name="note"/>
                        </group>
                    </page>
                    <page name="quota" string="Quota">
                        <group>
                            <field name="disk_size"/>
                        </group>
                    </page>
                    <page name="ips" string="IPs">
                        <group>
                            <field name="ip_ids">
                                <tree editable="bottom">
                                    <field name="name"/>
                                </tree>
                            </field>
                        </group>
                    </page>

                    <page name="subdomains" string="Domains and Subdomains">
                        <field name="domains_ids">
                            <tree>
                                <field name="name"/>
                            </tree>
                        </field>
                    </page>
                    <page name="links" string="Links">
                        <field name="links_ids"/>
                    </page>
                </notebook>
            </sheet>
            <div class="oe_chatter">
                <field name="message_follower_ids" widget="mail_followers"/>
                <field name="message_ids" widget="mail_thread"/>
            </div>
        </form>
        </field>
    </record>

    <record id="it_hosting_search" model="ir.ui.view">
        <field name="name">it.hosting.search</field>
        <field name="model">it.hosting</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="hosting_type"/>
                <field name="resource_type"/>
                <field name="domain_id"/>
                <field name="ip_ids"/>
                <field name="os"/>

                <filter name="it_hosting_not_archived" string="Not Archived" domain="[('active', '=', True)]"/>
                <filter name="it_hosting_archived" string="Archived" domain="[('active', '=', False)]"/>
                <separator/>
                <filter name="it_hosting_web" string="Web" domain="[('hosting_type', '=', 'web')]"/>

                <group expand="1" string="Group By">
                      <filter string="Type" name="hosting_type" context="{'group_by':'hosting_type'}"/>
                      <filter string="OS" name="os" context="{'group_by':'os'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="it_hosting_action" model="ir.actions.act_window">
        <field name="name">Hosting</field>
        <field name="res_model">it.hosting</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
        <p class="oe_view_nocontent_create">Create a new hosting</p>
        </field>
    </record>

    <menuitem id="it_menu_main_hosting" name="Hosting" parent="it_base.main_it_menu" sequence="4"/>
    <menuitem action="it_hosting_action" id="it_menu_hosting" name="Hosting" parent="it_menu_main_hosting"/>
</odoo>
