<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="it_server_ip_tree" model="ir.ui.view">
        <field name="name">it.server.ip.tree</field>
        <field name="model">it.server.ip</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="function"/>
            </tree>
        </field>
    </record>


    <record id="it_server_ip_form" model="ir.ui.view">
        <field name="name">it.server.ip.form</field>
        <field name="model">it.server.ip</field>
        <field name="arch" type="xml">
            <form string="IP">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <!-- groups="base.group_no_one" -->
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                        </button>
                    </div>
                    <group>
                        <field name="name" default_focus="1"/>
                        <field name="function"/>
                        <field name="is_private"/>
                    </group>

                    <group name="associations">
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="it_server_ip_search" model="ir.ui.view">
        <field name="name">it.server.ip.search</field>
        <field name="model">it.server.ip</field>
        <field name="arch" type="xml">
            <search>
                <filter name="not_archived" string="Not Archived" domain="[('active', '=', True)]"/>
                <filter name="archived" string="Archived" domain="[('active', '=', False)]"/>
                <separator/>
                <filter name="is_private" string="Private" domain="[('is_private', '=', True)]"/>
                <filter name="is_public" string="Public" domain="[('is_private', '=', False)]"/>

                <field name="name"/>
                <field name="function"/>
                <field name="is_private"/>
            </search>
        </field>
    </record>

    <record id="it_server_ip_action" model="ir.actions.act_window">
        <field name="name">ip</field>
        <field name="res_model">it.server.ip</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{"search_default_is_public":1}</field>
        <field name="help" type="html">
        <p class="oe_view_nocontent_create">Create a new ip</p>
        </field>
    </record>

    <menuitem action="it_server_ip_action" id="it_menu_ip" name="IPs" parent="it_menu_settings"/>
</odoo>
