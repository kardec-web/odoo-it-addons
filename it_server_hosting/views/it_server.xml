<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="it_server_form" model="ir.ui.view">
        <field name="name">it.server.form</field>
        <field name="model">it.server</field>
        <field name="inherit_id" ref="it_server.it_server_form" />
        <field name="arch" type="xml">

            <div name="button_box" position="inside">
                  <button class="oe_stat_button" name="open_hosting" type="object" icon="fa-envelope" id="open_hosting">
                    <div class="o_form_field o_stat_info">
                        <span class="o_stat_value"><field name="number_of_hosting" /></span>
                        <span class="o_stat_text">Hosting</span>
                    </div>
                  </button>

            </div>
        </field>
    </record>

</odoo>
