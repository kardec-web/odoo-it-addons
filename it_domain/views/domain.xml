<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="ir.ui.view" id="it_domain_tree">
        <field name="name">it.domain.tree</field>
        <field name="model">it.domain</field>
        <field name="arch" type="xml">
            <tree string="Domains" >
                <field name="name"/>
                <field name="customer"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="it_domain_form">
        <field name="name">it.domain.form</field>
        <field name="model">it.domain</field>
        <field name="arch" type="xml">
            <form string="Domain">
                <header>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <!-- groups="base.group_no_one" -->
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" default_focus="1" placeholder="Domain" />
                        </h1>
                    </div>

                    <group name="options" />

                    <group name="fields">
                        <field name="customer"/>
                        <field name="date_expiration"/>
                    </group>

                    <group name="contacts">
                        <field name="technical_contact" />
                    </group>

                    <group name="note" >
                        <field name="internal_note" />
                    </group>


                    <notebook>
                    </notebook>
                </sheet>

                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="it_domain_search">
        <field name="name">it.domain.search</field>
        <field name="model">it.domain</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="customer"/>

                <filter name="not-archived" string="Not Archived" domain="[('active', '=', True)]"/>
                <filter name="archived" string="Archived" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

    <record model="ir.actions.act_window" id="it_domain_action">
        <field name="name">Domaines</field>
        <field name="res_model">it.domain</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
        <p class="oe_view_nocontent_create">Create a new domain</p>
        </field>
    </record>

    <menuitem id="it_menu_domain_main" name="Domaines" parent="it_base.main_it_menu" sequence="1" />
    <menuitem action="it_domain_action" id="it_menu_domain" name="Domaines" parent="it_menu_domain_main"/>
</odoo>
