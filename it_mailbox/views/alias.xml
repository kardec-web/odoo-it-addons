<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
		<record id="it_mailbox_alias_tree" model="ir.ui.view">
			<field name="name">it.mailbox.alias.tree</field>
			<field name="model">it.mailbox.alias</field>
			<field name="arch" type="xml">
			<tree string="Mailbox alias" editable="top" >
				<field name="name"/>
				<field name="email"/>
				<field name="domain"/>
				<field name="goto"/>
				<field name="active"/>
			</tree>
			</field>
		</record>



		<record id="it_mailbox_alias_form" model="ir.ui.view">
			<field name="name">it.mailbox.alias.form</field>
			<field name="model">it.mailbox.alias</field>
			<field name="arch" type="xml">
			<form string="Mailbox">
				<sheet>
					<div class="oe_button_box" name="button_box">
						<!-- groups="base.group_no_one" -->
						<button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                        	<field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                    	</button>
					</div>
					<div class="oe_title">
						<h1>
							<field name="name" default_focus="1" placeholder="Alias" />
						</h1>
					</div>
					<group>
						<field name="email"/>
						<field name="domain"/>
						<field name="goto"/>
					</group>
				</sheet>
			</form>
			</field>
		</record>

		<record id="it_mailbox_alias_search" model="ir.ui.view">
			<field name="name">it.mailbox.alias.search</field>
			<field name="model">it.mailbox.alias</field>
			<field name="arch" type="xml">
				<search>
					<field name="email"/>
					<field name="name"/>
					<field name="domain"/>
					<field name="goto"/>

					<filter name="not-archived" string="Not Archived" domain="[('active', '=', True)]"/>
					<filter name="archived" string="Archived" domain="[('active', '=', False)]"/>
				</search>
			</field>
		</record>

		<record id="it_mailbox_alias_action" model="ir.actions.act_window">
			<field name="name">Mailbox alias</field>
			<field name="res_model">it.mailbox.alias</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="help" type="html">
			<p class="oe_view_nocontent_create">Create a new alias</p>
			</field>
		</record>

		<menuitem action="it_mailbox_alias_action" id="it_menu_mailbox_alias" name="Alias" parent="it_menu_mailbox" sequence="3"/>

	</data>
</openerp>