<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="it_server_form" model="ir.ui.view">
        <field name="name">it.server.form</field>
        <field name="model">it.server</field>
        <field name="inherit_id" ref="it_server.it_server_form" />
        <field name="arch" type="xml">

            <field name="parent_id" position="after">
                <field name="estimate_cost_total" type="measure"/>
            </field>

            <notebook position="inside">
                <page string="Estimate Costs" name="estimate_cost">
                    <field name="estimate_cost_ids" context="{'default_server_id': active_id}">
                        <tree editable="top">
                            <field name="name" />
                            <field name="estimate_cost" sum="Total"/>
                        </tree>
                    </field>
                </page>
            </notebook>
        </field>
    </record>

</odoo>
