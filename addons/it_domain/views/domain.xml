<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="ir.ui.view" id="it_domain_tree">
        <field name="name">it.domain.tree</field>
        <field name="model">it.domain</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="customer_id"/>
                <field name="date_expiration"/>
                <field name="certificate_expire_on"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="it_domain_form">
        <field name="name">it.domain.form</field>
        <field name="model">it.domain</field>
        <field name="arch" type="xml">
            <form string="Domain">
                <header>
                    <button name="toggle_active" string="Restore" type="object" attrs="{'invisible': [('active', '=', True)]}"/>
                    <button name="action_verify_ssl_validity" string="Get Certificate Data" type="object" attrs="{'invisible': [('verify_certificate_validity', '=', False)]}"/>
                </header>
                <sheet>
                    <field name="active" invisible="1"/>
                    <widget name="web_ribbon" text="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>

                    <div class="oe_button_box" name="button_box" groups="base.group_user">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive" string="Archive" attrs="{'invisible': [('active', '=', False)]}" />
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" widget="url" default_focus="1" placeholder="Domain" />
                        </h1>
                    </div>

                    <group name="options" >
                        <field name="verify_certificate_validity" />
                    </group>

                    <group name="fields">
                        <field name="date_expiration"/>
                        <field name="system"/>
                    </group>

                    <group name="note" >
                        <field name="internal_note" />
                    </group>


                    <notebook>
                        <page name="contact" string="Contact">
                            <div class="alert alert-info" style="margin-top:25px;" role="alert">
                                You can specify here some contacts informations:
                                <ul>
                                    <li>Customer</li>
                                    <li>Technical contact of the customer</li>
                                </ul>
                            </div>

                            <group name="contacts">
                                <field name="customer_id" context="{'res_partner_search_mode': 'customer'}"/>
                                <field name="technical_contact_id" context="{'res_partner_search_mode': 'customer'}"/>
                            </group>
                        </page>
                        <page name="certificate" string="Certificate">
                            <group>
                                <field name="certificate_expire_on" string="Expire On"/>
                                <field name="certificate_ocsp" string="OCSP"/>
                                <field name="certificate_generate_by" string="Generate By"/>
                                <field name="is_certificate_expired" string="Expired ?"/>
                            </group>
                        </page>
                        <page name="whois" string="Whois">
                            <group>
                                <field name="dnsbelgium_url" widget="url"/>
                                <field name="eurid_url" widget="url"/>
                            </group>
                        </page>

                    </notebook>
                </sheet>

                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" help="Follow this domain to automatically track expiration of the certificate SSL." groups="base.group_user"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="it_domain_search">
        <field name="name">it.domain.search</field>
        <field name="model">it.domain</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="customer_id" />

                <filter name="not_archived" string="Not Archived" domain="[('active', '=', True)]"/>
                <filter name="archived" string="Archived" domain="[('active', '=', False)]"/>
                <separator/>
                <filter name="whithout_system" string="Whithout System" domain="[('system', '=', False)]"/>
                <filter name="system" string="System" domain="[('system', '=', True)]"/>
                <separator/>
                <filter name="is_certificate_expired" string="Certificate To Renew" domain="[('is_certificate_expired', '=', True)]"/>
            </search>
        </field>
    </record>

    <record model="ir.actions.act_window" id="it_domain_action">
        <field name="name">Domaines</field>
        <field name="res_model">it.domain</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{"search_default_whithout_system":1}</field>
        <field name="help" type="html">
        <p class="oe_view_nocontent_create">Create a new domain</p>
        </field>
    </record>

    <menuitem id="it_menu_domain_main" name="Domaines" parent="it_base.main_it_menu" sequence="1" />
    <menuitem action="it_domain_action" id="it_menu_domain" name="Domaines" parent="it_menu_domain_main"/>
</odoo>
